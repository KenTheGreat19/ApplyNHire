generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  APPLICANT
  EMPLOYER
  ADMIN
}

enum JobStatus {
  pending
  approved
  rejected
}

enum EmploymentType {
  full_time
  part_time
  contract
  internship
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  password    String?
  role        Role     @default(APPLICANT)
  companyName String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  jobs         Job[]
  applications Application[]

  @@index([email])
  @@index([role])
}

model Job {
  id          String         @id @default(cuid())
  title       String
  company     String
  location    String
  type        EmploymentType
  description String         @db.Text
  applyUrl    String
  status      JobStatus      @default(pending)
  salaryMin   Int?
  salaryMax   Int?
  employerId  String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  employer     User          @relation(fields: [employerId], references: [id], onDelete: Cascade)
  applications Application[]

  @@index([employerId])
  @@index([status])
  @@index([type])
  @@index([createdAt])
}

model Application {
  id          String   @id @default(cuid())
  jobId       String
  applicantId String
  appliedAt   DateTime @default(now())

  job       Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  applicant User @relation(fields: [applicantId], references: [id], onDelete: Cascade)

  @@unique([jobId, applicantId])
  @@index([applicantId])
  @@index([jobId])
}
